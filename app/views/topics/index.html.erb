<h1>Topics</h1>

<div id="topics">
  <% @topics.each do |topic| %>
    <%= render 'topics/topic', topic: topic  %>
    <p>
      <%= link_to "Show this topic", topic_path(id: topic) %>
    </p>
  <% end %>
</div>

<%= link_to "New topic", new_topic_path %>
